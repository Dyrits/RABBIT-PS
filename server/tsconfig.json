{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "checkJs": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}